journal = {Taxon},
keywords = {and diversification in,autopolyploidy,been associated with evolution,e,genome doubling,has frequently,i,nomenclature,polyploidy,polyploidy in plants,species,sympatric speciation,taxonomy},
number = {1},
pages = {13--30},
title = {{Autoploidy in angiosperms: have we grossly underestimated the number of species?}},
url = {https://is.muni.cz/el/1431/podzim2007/Bi9020/um/4567165/4567187/Soltis{\_}autopolyploidy{\_}plants{\_}Taxon{\_}2007.pdf},
