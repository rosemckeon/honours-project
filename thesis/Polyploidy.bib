@article{Ramsey2014,
abstract = {Review Cite this article: Ramsey J, Ramsey TS. 2014 Ecological studies of polyploidy in the 100 years following its discovery. Phil. Trans. R. Soc. B 369: 20130352. http://dx.doi.org/10.1098/rstb.2013.0352

